<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
 
    <div >
        @RenderBody()
       
        <div id="footer" class="navbar navbar-light" style="padding:25px 0 25px 0; margin-bottom:0px; border:none; bottom:0; text-align:center; font-size:14px; background-color: #f5f5f5;">
            Niagara Catholic District School Board - Copyright © @DateTime.Now.Year
        </div>

        <div id="footer2" style=" height:15px; margin-bottom:0px; border:none; bottom:0; text-align:center; font-size:14px; background-color: grey;"></div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
